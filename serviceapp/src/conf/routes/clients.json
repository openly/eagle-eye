{
  "/clients": {
    "module": "db_crud",
    "method": "read",
    "params": {
      "model": "clients",
      "fields": [
        "client_name",
        "description",
        "client_handle",
        "users",
        "created_at",
        "updated_at"
      ]
    },
    "subroutes": {
      "/:id": {
        "req_method": "get",
        "module": "db_crud",
        "method": "read",
        "authorisation": "user",
        "params": {
          "model": "clients",
          "query": {
            "_id": "${id}"
          },
          "fields": [
            "client_name",
            "client_handle",
            "description",
            "created_at",
            "updated_at"
          ]
        }
      },
      "/create": {
        "req_method": "post",
        "module": "db_crud",
        "method": "create",
        "authorisation": "super_admin",
        "params": {
          "model": "clients",
          "before": [
            "clients.updateCreatedDate"
          ],
          "validation": {
            "client_name": {
              "required": {
                "error_message": "Please enter Client Name."
              }
            },
            "client_handle": {
              "required": {
                "error_message": "Please enter Client Handle."
              }
            }
          }
        }
      },
      "/update/:id": {
        "req_method": "post",
        "module": "db_crud",
        "method": "update",
        "authorisation": "super_admin",
        "params": {
          "model": "clients",
          "query"       : { 
            "_id" : "${id}" 
          },
          "before": [
            "clients.updateLastUpdatedDate",
            "clients.unsetClientHandleOnUpdate"
          ],
          "validation": {
            "client_name": {
              "required": {
                "error_message": "Please enter Client Name."
              }
            }
          }
        }
      },
      "/delete/:id": {
        "req_method": "get",
        "module": "db_crud",
        "method": "delete",
        "authorisation": "super_admin",
        "params": {
          "model": "clients",
          "query": { "_id" : "${id}" },
          "validation": {
            "_id": {
              "required": {
                "error_message": "Please provide ClientID."
              }
            }
          }
        }
      }
    }
  }
}